<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Talk X", root_path, id: "logo", class: "navbar-brand" %>

    <!-- Hamburger for mobile -->
    <button type="button" id="hamburger" class="navbar-toggle" data-toggle="collapse" data-target="#nav-menu">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

    <!-- Navbar links -->
    <nav id="nav-menu" class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>

        <% if logged_in? %>
          <li><%= link_to "Users", "#" %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, data: { turbo_method: "delete", confirm: "Are you sure?" } %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
